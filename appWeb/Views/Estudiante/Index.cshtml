@model IEnumerable<Modelo.EstudianteModelo>

@{
    ViewBag.Title = "Index";
}

<h2>Estudiante</h2>

<h2 class="page-header">
    <a href="~/Estudiante/Crud" class="btn btn-primary pull-left">Nuevo Estudiante</a>
</h2>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre</th>
            <th scope="col">No Identificación</th>
            <th scope="col">Email</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.NombreCompleto</td>
                <td>@item.NoIdentifacion</td>
                <td>@item.Email</td>
                <td>
                    <a href="~/Estudiante/Crud/@item.Id" class="btn btn-warning btn-sm">Editar</a>

                    <a class="btn btn-danger btn-sm" href="~/Estudiante/DeleteEstudiante/@item.Id">Eliminar</a>
                </td>
            </tr>
        }

    </tbody>
</table>

